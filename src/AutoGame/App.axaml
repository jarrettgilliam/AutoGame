<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sty="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:viewModels="clr-namespace:AutoGame.ViewModels"
             x:Class="AutoGame.App">

    <Application.Styles>
        <sty:FluentAvaloniaTheme />
    </Application.Styles>
    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon
                Icon="/Assets/AutoGame.ico"
                ToolTipText="AutoGame"
                x:DataType="viewModels:AppViewModel"
                Command="{Binding ToggleWindowCommand}">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Show/Hide" Command="{Binding ToggleWindowCommand}" />
                        <NativeMenuItem Header="Exit" Command="{Binding ExitCommand}" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>